<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerMenu">

        </ScrollView>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginTop="58dp" >

            <Button
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:id="@+id/myactbutton"
                android:layout_alignParentLeft="true"
                android:text="My Activities"
                android:padding="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:background="#c56969"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/fractbutton"
                android:layout_alignParentRight="true"
                android:text="Around me"
                android:padding="0dp"
                android:background="#902727"
                android:textColor="#ffffff" />
        </RelativeLayout>



        <ViewFlipper
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewFlipper"
            android:layout_below="@+id/relativeLayout1">

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipe_refresh1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/events_listView1"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/myactbutton"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingTop="5dp" />
            </android.support.v4.widget.SwipeRefreshLayout>
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipe_refresh2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/events_listView2"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/myactbutton"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingTop="5dp" />

            </android.support.v4.widget.SwipeRefreshLayout>




        </ViewFlipper>
    </RelativeLayout>

    <include layout="@layout/header" />

    <include layout="@layout/leftside_panel" />

</android.support.v4.widget.DrawerLayout>
