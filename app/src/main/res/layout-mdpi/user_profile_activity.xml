<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/tool_bar"
        layout="@layout/header_login"
        android:layout_height="56dp"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@drawable/shadow_top_to_bottom"
        android:layout_below="@+id/tool_bar"/>
    <LinearLayout
        android:id="@+id/noInternetBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar">
        <include
            layout="@layout/no_connection_bar"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/profileContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/noInternetBar"
        android:scrollbars="none"
        android:fillViewport="true"
        android:alpha="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:clickable="false"
                    android:src="@drawable/com_facebook_profile_picture_blank_portrait" />
            </RelativeLayout>
            <TextView
                android:id="@+id/profileName"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:fontFamily="@string/fontmedium"
                android:textSize="18sp"
                android:textColor="@color/pink"
                android:text="Florin Bogdan"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">
                <Button
                    android:id="@+id/profileChat"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Chat"
                    android:fontFamily="@string/fontbold"
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/green_button_selector"/>

                <Button
                    android:id="@+id/profileFriend"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/pink_button_selector"
                    android:fontFamily="@string/fontbold"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="ADD FRIEND"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_height="60dp"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:background="#ffffff"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_ludicoins"/>
                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/profileLevel"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="12"
                            android:fontFamily="@string/fontmedium"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/profileLevelText"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Level"
                            android:fontFamily="@string/fontmedium"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="1dp"
                    android:background="#400c3855"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_user_points"/>
                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/profilePoints"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="12"
                            android:fontFamily="@string/fontmedium"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/profilePointsText"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Points"
                            android:fontFamily="@string/fontmedium"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="1dp"
                    android:background="#400c3855"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_user_position"/>
                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/profilePosition"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="12"
                            android:fontFamily="@string/fontmedium"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/profilePositionText"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Position"
                            android:fontFamily="@string/fontmedium"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="24dp">
                <TextView
                    android:id="@+id/profilePracticeSportsLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PRACTICED SPORTS"
                    android:fontFamily="@string/fontbold"
                    android:textSize="14sp"
                    android:gravity="left"/>
                <TextView
                    android:id="@+id/profilePracticeSportsCountLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2/12"
                    android:fontFamily="@string/fontmedium"
                    android:textSize="14sp"
                    android:gravity="right"/>
            </RelativeLayout>
            <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:scrollbars="none"
                android:fillViewport="true">
                <LinearLayout
                    android:id="@+id/profileSports"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blueAlpha"
                android:layout_marginTop="16dp">
            </LinearLayout>
            <RelativeLayout
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_marginTop="0dp">
                <!--android:layout_height="60dp"
                android:layout_marginTop="24dp"-->
                <TextView
                    android:id="@+id/profileBadgesText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BADGES"
                    android:fontFamily="@string/fontbold"
                    android:textSize="14sp"
                    android:gravity="left"/>
                <TextView
                    android:id="@+id/profileBadgesCountLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2/12"
                    android:fontFamily="@string/fontmedium"
                    android:textSize="14sp"
                    android:gravity="right"/>
            </RelativeLayout>
            <HorizontalScrollView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scrollbars="none"
                android:fillViewport="true">
                <!--android:layout_height="60dp"-->
                <LinearLayout
                    android:id="@+id/profileBadges"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/blueAlpha"
                android:layout_marginTop="0dp">
                <!--android:layout_height="1dp"
                android:layout_marginTop="16dp"-->
            </LinearLayout>
            <TextView
                android:id="@+id/versusLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="VERSUS"
                android:fontFamily="@string/fontbold"
                android:textSize="14sp"
                android:gravity="left"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginBottom="16dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentLeft="true">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profileYouImage"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ph_user"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/youLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="You"
                                android:textColor="@color/green"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_points_small"/>
                                <TextView
                                    android:id="@+id/profileYouPoints"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/blue"
                                    android:text="12.500"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/vsLabel"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="VS"
                        android:gravity="center"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/foeLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Foe"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/pink"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/profileFoePoints"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12.500"
                                    android:textColor="@color/blue"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_points_small"/>
                            </LinearLayout>
                        </LinearLayout>
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profileFoeImage"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ph_user"/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/blueAlpha"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"/>
                <LinearLayout
                    android:id="@+id/profileVresus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/profileProgressBar"
        style="@android:style/Widget.Holo.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:indeterminate="true"/>
</RelativeLayout>