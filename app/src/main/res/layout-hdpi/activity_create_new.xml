
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/drawer_layout_createnew"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--android:paddingTop="@dimen/activity_vertical_margin"-->

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="60dp"
        android:fillViewport="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="larc.ludicon.Activities.CreateNewActivity">

            <!-- SPORTS PICK -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:text="Pick a sport"
                android:id="@+id/sportPickTV"
                android:textColor="#81878b"
                android:textStyle="bold"
                android:textSize="20dp" />
            <Spinner
                android:id="@+id/sports_spinner"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/sportPickTV"
                android:background="#FFFFFF"
                android:spinnerMode="dropdown"
                android:layout_marginBottom="10dp" />

            <!--MAX PLAYERS-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Maximum number of players"
                android:textColor="#81878b"
                android:id="@+id/MaxPlayers"
                android:layout_below="@+id/sports_spinner"
                android:textStyle="bold"
                android:textSize="20dp" />

            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/MaxPlayers"
                android:id="@+id/maxPlayersInput"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:scrollIndicators="top|bottom" />



            <!--DESCRIPTION-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Description"
                android:textColor="#81878b"
                android:id="@+id/Description"
                android:layout_below="@+id/maxPlayersInput"
                android:textStyle="bold"
                android:textSize="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Description"
                android:id="@+id/DescriptionInput" />

            <!-- DATE TIME PICK -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Date and time"
                android:textColor="#81878b"
                android:id="@+id/datetimeTB"
                android:layout_below="@+id/DescriptionInput"
                android:textStyle="bold"
                android:textSize="20dp" />

            <DatePicker
                android:id="@+id/date_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:calendarViewShown="false"
                android:datePickerMode="calendar"
                android:headerBackground="#0e64a6"
                android:yearListSelectorColor="#0e64a6"
                android:elevation="4dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/datetimeTB"/>


            <TimePicker
                android:id="@+id/time_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:headerBackground="#0e64a6"
                android:timePickerMode="clock"
                android:layout_below="@+id/date_picker"
                android:layout_marginBottom="10dp" />

            <!-- MAPS PICK -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Location"
                android:textColor="#81878b"
                android:id="@+id/locationTB"
                android:layout_below="@+id/time_picker"
                android:textStyle="bold"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Please tap on the map to choose the perfect place:"
                android:textColor="#81878b"
                android:id="@+id/locationHint"
                android:layout_below="@+id/locationTB"
                android:textStyle="italic"
                android:textSize="10dp" />

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                android:name="com.google.android.gms.maps.MapFragment"
                android:id="@+id/map"
                android:layout_below="@+id/locationHint"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"

                />

            <Button
                android:id="@+id/createEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:background="#0e64a6"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/map"
                android:onClick="OnCreateEvent"
                android:textStyle="bold"
                android:textSize="20dp" />


            <ProgressBar android:indeterminate="true"
                android:layout_width="50dp" android:layout_height="50dp"
                android:id="@+id/marker_progress" style="?android:attr/progressBarStyle"
                android:layout_below="@+id/map"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/createEvent"
                android:layout_marginLeft="10dp"
                android:visibility="invisible"/>




        </RelativeLayout>
    </ScrollView>

    <include layout="@layout/header"/>
    <include layout="@layout/leftside_panel"/>
</android.support.v4.widget.DrawerLayout>