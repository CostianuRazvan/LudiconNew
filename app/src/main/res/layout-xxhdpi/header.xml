<?xml version="1.0" encoding="utf-8"?>
<!-- HEADER PANEL -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/leftside_header"
        android:elevation="4dp"
        android:id="@+id/headerMenu">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/friendPicture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="65dp"
            android:layout_centerVertical="true" />

        <ImageButton android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_drawer"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:id="@+id/showPanel"
            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="23dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:id="@+id/hello_message_activity"
            android:textStyle="bold" />
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/admin_add2"
            android:id="@+id/header_button"
            android:visibility="invisible"
            android:layout_alignTop="@+id/friendPicture"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" />

    </RelativeLayout>
</LinearLayout>

    <!-- HEADER PANEL END -->