
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/drawer_layout_createnew"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="60dp"
                android:fillViewport="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="larc.ludicon.Activities.CreateNewActivity">

    <!-- SPORTS PICK -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:text="Pick a sport"
        android:id="@+id/sportPickTV"
        android:textColor="#8f2525"
        />
    <Spinner
        android:id="@+id/sports_spinner"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sportPickTV"
        android:background="#FFFFFF"
        android:spinnerMode="dropdown"
        />

    <!-- EVENT PRIVACY -->

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonsContainer"
        android:layout_below="@+id/sports_spinner">
    <Button
        android:id="@+id/publicBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Public"
        android:layout_marginTop="10dp"
        android:width="140dp"
        android:height="20dp"
        android:textAllCaps="false"
        android:background="#8f2525"
        android:textColor="#FFFFFF"
        android:onClick="onPrivacyButtonsClicked"
        />
    <Button
        android:id="@+id/privateBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Private"
        android:layout_marginTop="10dp"
        android:width="140dp"
        android:height="20dp"
        android:textAllCaps="false"
        android:layout_toRightOf="@+id/publicBut"
        android:layout_marginLeft="7dp"
        android:background="#8f2525"
        android:textColor="#FFFFFF"
        android:alpha="0.5"
        android:onClick="onPrivacyButtonsClicked"
        />
    </LinearLayout>

    <!-- INVITE FRIENDS -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Invite a friend"
        android:textColor="#8f2525"
        android:id="@+id/inviteFriendsTB"
        android:layout_below="@+id/buttonsContainer"
        />

        <AutoCompleteTextView
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/inviteFriendsTV"
            android:layout_width="200dp"
            android:layout_marginTop="5dp"
            android:textColor="#8f2525"
            android:background="#FFFFFF"
            android:layout_below="@+id/inviteFriendsTB"
            />

        <!-- DATE TIME PICK -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Date"
            android:textColor="#8f2525"
            android:id="@+id/datetimeTB"
            android:layout_below="@+id/inviteFriendsTV"
            />

        <DatePicker
            android:id="@+id/date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/datetimeTB"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Time"
                android:textColor="#8f2525"
                android:id="@+id/timeTB"
                android:layout_below="@+id/date_picker"
                />

            <TimePicker
                android:id="@+id/time_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:timePickerMode="spinner"
                android:layout_below="@+id/timeTB"/>

            <!-- MAPS PICK -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Location"
                android:textColor="#8f2525"
                android:id="@+id/locationTB"
                android:layout_below="@+id/time_picker"
                />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/locationTB"
                android:ems="10"
                android:text="Please enter your place">

                <requestFocus />
            </AutoCompleteTextView>


            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map"
                android:layout_below="@+id/autoCompleteTextView"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"

        />

        <Button
            android:id="@+id/createEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:background="#8f2525"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/map"
            android:onClick="OnCreateEvent"
            />

</RelativeLayout>
    </ScrollView>

    <include layout="@layout/header"/>
    <include layout="@layout/leftside_panel"/>
</android.support.v4.widget.DrawerLayout>