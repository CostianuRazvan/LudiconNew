<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_user_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:id="@+id/checkLayout">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/userImageProfile"
            android:background="@drawable/ph_user"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userName"
            android:layout_toRightOf="@+id/userImageProfile"
            android:text="Lucas Ellison"
            android:textSize="18sp"
            android:fontFamily="@string/fontmedium"
            android:layout_marginTop="10dp"
            android:textColor="#0c3855"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/socialRatingText"
            android:layout_below="@+id/userName"
            android:layout_toRightOf="@+id/userImageProfile"
            android:text="@string/level"
            android:textSize="18sp"
            android:fontFamily="@string/fontmedium"
            android:layout_marginTop="5dp"
            android:textColor="#d4498b"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/socialRating"
            android:layout_below="@+id/userName"
            android:layout_toRightOf="@+id/socialRatingText"
            android:text="4.5"
            android:textSize="18sp"
            android:fontFamily="@string/fontmedium"
            android:layout_marginTop="5dp"
            android:textColor="#d4498b"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_check"
            android:id="@+id/check_button"/>

    </RelativeLayout>

</LinearLayout>