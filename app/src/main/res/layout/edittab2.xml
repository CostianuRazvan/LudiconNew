<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f9fc">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@drawable/shadow_top_to_bottom"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/editScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="35dp"
                    android:layout_height="110dp"
                    android:layout_centerHorizontal="true"
                    android:alpha="0"
                    android:src="@drawable/com_facebook_button_send_background"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imgProfilePicture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:clickable="false"
                    android:src="@drawable/com_facebook_profile_picture_blank_portrait" />

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/chooseAPhoto"
                    android:clickable="true"
                    android:layout_toRightOf="@+id/imageView"
                    android:src="@color/com_facebook_blue"
                    android:layout_marginTop="70dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="16sp"
                android:inputType="text"
                android:text="florin@bogdan.com"
                android:gravity="center"
                android:textColor="#400c3855"
                android:fontFamily="@string/fontmedium"/>

            <EditText
                android:id="@+id/editFirstName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:drawableLeft="@drawable/ic_bnav_user_selected"
                android:ems="10"
                android:paddingLeft="15dp"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:inputType="text"
                android:background="@drawable/rounded_edittext"
                android:hint="First Name"/>
            <EditText
                android:id="@+id/editLastName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:drawableLeft="@drawable/ic_bnav_user_selected"
                android:ems="10"
                android:textSize="16sp"
                android:paddingLeft="15dp"
                android:layout_marginTop="8dp"
                android:inputType="text"
                android:background="@drawable/rounded_edittext"
                android:hint="Last Name"/>

                <RadioGroup
                    android:checkedButton="@+id/male"
                    android:id="@+id/editSexSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/rounded_edittext"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <RadioButton
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/editMale"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:text="Male"
                        android:textSize="16sp"
                        android:textColor="#1A0c3855"
                        />

                    <RadioButton
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:id="@+id/editFemale"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:text="Female"
                        android:textColor="#1A0c3855" />
            </RadioGroup>
            <TextView
                android:id="@+id/editDate"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:drawableLeft="@drawable/ic_calendar"
                android:ems="10"
                android:paddingLeft="15dp"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_edittext"
                android:hint="Birth Date"
                android:gravity="center_vertical"/>

            <Button
                android:id="@+id/editPasswordButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="CHANGE PASSWORD"
                android:textSize="14sp"
                android:textColor="@color/pink"
                android:layout_marginTop="8dp"
                android:background="@drawable/pink_stroke_rounded_button"/>
            <RelativeLayout
                android:id="@+id/editPasswordLayout"
                android:layout_height="0dp"
                android:layout_width="match_parent">
                <EditText
                    android:id="@+id/oldPassword"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableLeft="@drawable/ic_lock"
                    android:ems="10"
                    android:textSize="16sp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:inputType="textPassword"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Old password"/>
                <EditText
                    android:id="@+id/newPassword"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableLeft="@drawable/ic_lock"
                    android:ems="10"
                    android:textSize="16sp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:inputType="textPassword"
                    android:background="@drawable/rounded_edittext"
                    android:hint="New password"
                    android:layout_below="@+id/oldPassword"/>
                <EditText
                    android:id="@+id/editPasswordRepeat"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableLeft="@drawable/ic_lock"
                    android:ems="10"
                    android:textSize="16sp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:inputType="textPassword"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Password"
                    android:layout_below="@+id/newPassword"/>
            </RelativeLayout>
            <Button
                android:id="@+id/saveChangesButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="SAVE CHANGES"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:layout_marginTop="8dp"
                android:background="@drawable/pink_button_selector"
                android:layout_marginBottom="6dp"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>