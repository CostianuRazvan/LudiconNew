<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/drawer_layout_chats"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:id="@+id/relLayout"
    android:paddingTop="70dp"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:text="Events joined:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventsjoined"
        android:textSize="25sp"
        android:paddingBottom="20dp"
        android:textColor="#000"/>
        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/eventsjoined"
            android:id="@+id/numberjoined"
            android:textSize="25sp"
            android:paddingBottom="20dp"
            android:textColor="#000"/>

    <TextView
        android:text="Events participated:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventsparticipated"
        android:textSize="25sp"
        android:paddingBottom="20dp"
        android:textColor="#000"
        android:layout_below="@id/eventsjoined"/>
        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/numberjoined"
            android:layout_toRightOf="@id/eventsparticipated"
            android:id="@+id/numberparticipated"
            android:textSize="25sp"
            android:paddingBottom="20dp"
            android:textColor="#000"/>

</RelativeLayout>

    <include layout="@layout/header"/>
    <include layout="@layout/leftside_panel" />




</android.support.v4.widget.DrawerLayout>
