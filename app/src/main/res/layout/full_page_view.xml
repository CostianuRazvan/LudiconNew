<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="56dp"

    android:background="#f7f9fc">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_bar_view"
            layout="@layout/header_login"
            android:layout_height="56dp"
            android:layout_width="match_parent"
            />
        <include
            layout="@layout/no_connection_bar"/>

        <ScrollView
            android:id="@+id/profileContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tool_bar_view"
            android:scrollbars="none"
            android:fillViewport="true"
            android:alpha="1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/socialLabel">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/social_rating"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:id="@+id/socialRating"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/socialRating"
                        android:text="4.23"
                        android:textColor="@color/pink"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:id="@+id/rating"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rating"
                        android:text="Based on 23 reviews"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/lightGray"
                        android:id="@+id/countReview"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="#400c3855"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textLayout1">
                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:text="@string/excellent"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:layout_marginLeft="30dp"
                            android:id="@+id/text1"/>
                        <ProgressBar
                            android:id="@+id/progressBar1"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/progress_bar_green"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/text1"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="5dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textLayout2"
                        android:layout_below="@+id/textLayout1">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:text="@string/good"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/text2"/>
                        <ProgressBar
                            android:id="@+id/progressBar2"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/progress_bar_green_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/text2"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="10dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textLayout3"
                        android:layout_below="@+id/textLayout2">
                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:text="@string/average"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:layout_marginLeft="30dp"
                            android:id="@+id/text3"
                            android:layout_marginTop="5dp"/>
                        <ProgressBar
                            android:id="@+id/progressBar3"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/progress_bar_yellow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/text3"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="10dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textLayout4"
                        android:layout_below="@+id/textLayout3">
                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:text="@string/below_average"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:layout_marginLeft="30dp"
                            android:id="@+id/text4"
                            android:layout_marginTop="5dp"/>
                        <ProgressBar
                            android:id="@+id/progressBar4"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/progress_bar_orange"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/text4"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="10dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textLayout5"
                        android:layout_below="@+id/textLayout4">
                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:text="@string/poor"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:layout_marginLeft="30dp"
                            android:id="@+id/text5"
                            android:layout_marginTop="5dp"/>
                        <ProgressBar
                            android:id="@+id/progressBar5"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/progress_bar_red"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/text5"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="10dp"/>
                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="#400c3855"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/layout_reviews"
                    android:orientation="vertical">

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>