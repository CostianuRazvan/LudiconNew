<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/sport_logo"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total points: "
        android:layout_centerHorizontal="true"
        android:id="@+id/totalPointsPerSport"
        android:textColor="#0C3855"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_below="@id/sport_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total events attended: "
        android:layout_centerHorizontal="true"
        android:id="@+id/totalEventsAttendedPerSport"
        android:layout_below="@+id/totalPointsPerSport"
        android:textColor="#0C3855"
        android:textStyle="bold"
        android:paddingBottom="10dp"/>

</RelativeLayout>