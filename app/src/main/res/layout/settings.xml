<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/drawer_layout_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg">

    <include layout="@layout/header"/>
    <include layout="@layout/leftside_panel"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relLayout">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#8f2525"
        android:text="Log out"
        android:textSize="20dp"
        android:id="@+id/logout"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffff"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

        <GridView
            android:paddingTop="50dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/gridView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/logout"
            android:layout_marginTop="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:numColumns="2"
            android:layout_above="@+id/textView8" />

        <SeekBar
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar2"
            android:layout_above="@+id/progressText"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:id="@+id/visibleSeekBar2"
            android:layout_above="@+id/progressText"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Favourite Sports"
            android:id="@+id/textView6"
            android:layout_alignTop="@+id/gridView"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Pick what sports you would like to play"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true" />

        <TextView
            android:paddingTop="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Range"
            android:id="@+id/textView8"
            android:layout_above="@+id/textView9"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="This is the area of discovering friends"
            android:id="@+id/textView9"
            android:layout_above="@+id/seekBar2"
            android:layout_alignRight="@+id/textView7"
            android:layout_alignEnd="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/progressText"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/logout" />

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>