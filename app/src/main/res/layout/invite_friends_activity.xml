<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f9fc">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/saveInvitedFriends"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/header_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>

        <ListView
            android:id="@+id/inviteFriendsListView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:divider="#0D0c3855"
            android:dividerHeight="1dp"
            android:scrollbars="none"/>

    </LinearLayout>
    <Button
        android:id="@+id/saveInvitedFriends"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="SAVE CHANGES"
        android:textSize="14dp"
        android:fontFamily="@string/fontbold"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:textColor="#ffffff"
        android:background="@drawable/green_button_selector"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@drawable/shadow_top_to_bottom"/>
</RelativeLayout>