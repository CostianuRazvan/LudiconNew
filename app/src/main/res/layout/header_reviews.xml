<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/socialLabel">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/social_rating"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="#0c3855"
                android:id="@+id/socialRating"
                android:fontFamily="@string/fontmedium"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/socialRating"
                android:text="4.23"
                android:textColor="#d4498b"
                android:textSize="18dp"
                android:gravity="center"
                android:id="@+id/rating"
                android:fontFamily="@string/fontmedium"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rating"
                android:text="Based on 23 reviews"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="#acb8c1"
                android:id="@+id/countReview"
                android:fontFamily="@string/fontmedium"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#400c3855"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/socialLabel"
            android:id="@+id/line1"
            android:orientation="horizontal">
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:id="@+id/progressBarLayout">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textLayout1">
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="@string/excellent"
                    android:textColor="#0c3855"
                    android:textSize="16dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/text1"
                    android:fontFamily="@string/fontmedium"/>
                <ProgressBar
                    android:id="@+id/progressBar1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progress_bar_green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textLayout2"
                android:layout_below="@+id/textLayout1">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="@string/good"
                    android:textColor="#0c3855"
                    android:textSize="16dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/text2"
                    android:fontFamily="@string/fontmedium"/>
                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progress_bar_green_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textLayout3"
                android:layout_below="@+id/textLayout2">
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="@string/average"
                    android:textColor="#0c3855"
                    android:textSize="16dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/text3"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@string/fontmedium"/>
                <ProgressBar
                    android:id="@+id/progressBar3"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progress_bar_yellow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text3"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textLayout4"
                android:layout_below="@+id/textLayout3">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/below_average"
                    android:textColor="#0c3855"
                    android:textSize="16dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/text4"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@string/fontmedium"/>
                <ProgressBar
                    android:id="@+id/progressBar4"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progress_bar_orange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textLayout5"
                android:layout_below="@+id/textLayout4"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="@string/poor"
                    android:textColor="#0c3855"
                    android:textSize="16dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/text5"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@string/fontmedium"/>
                <ProgressBar
                    android:id="@+id/progressBar5"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progress_bar_red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text5"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>