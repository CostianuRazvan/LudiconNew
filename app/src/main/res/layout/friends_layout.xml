<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frRelLayout">

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout2"
    android:layout_alignParentTop="true"
    android:layout_toLeftOf="@+id/chat_btn"
    android:layout_toStartOf="@+id/chat_btn">


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profileImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="10dp"
        android:paddingLeft="30dp"
        android:textSize="20dp"
        android:textColor="#008000"
        android:text="Nume"
        android:id="@+id/list_item_string"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_above="@+id/more_btn"
        android:layout_alignLeft="@+id/more_btn"
        android:layout_alignStart="@+id/more_btn"
        android:paddingTop="50dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/profileImageView"
            android:layout_toRightOf="@+id/more_btn"
            android:layout_toEndOf="@+id/more_btn"
            android:id="@+id/relativeLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#808080"
                android:text="Points"
                android:textSize="18dp"
                android:paddingLeft="50dp"
                android:layout_centerInParent="true"
                android:id="@+id/pointsText" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/flag"
                android:paddingRight="40dp"
                android:layout_toEndOf="@id/pointsText"
                android:layout_toRightOf="@id/pointsText" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numberSports"
                android:textColor="#808080"
                android:text="Sports"
                android:textSize="18dp"
                android:layout_alignTop="@+id/linearLayout"
                android:layout_alignLeft="@+id/more_btn" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/ballImage"
                android:background="@drawable/ball"
                android:layout_toRightOf="@id/numberSports" />
        </RelativeLayout>
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/more_btn"
        android:background="@drawable/more"
        android:layout_below="@+id/profileImageView"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="50dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_btn"
        android:background="@drawable/chatbtn"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:paddingLeft="10dp"
        android:layout_marginRight="50dp"
        android:layout_alignTop="@+id/more_btn"
        android:layout_alignParentRight="true" />
</RelativeLayout>
