<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frRelLayout">

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/chat_btn"
        android:layout_toStartOf="@+id/chat_btn">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="10dp"
        android:paddingLeft="30dp"
        android:textSize="20dp"
        android:textColor="#008000"
        android:text="Nume"
        android:id="@+id/list_item_string"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/more_btn"
        android:paddingLeft="40dp"
        android:background="@drawable/more"
        android:layout_below="@+id/profileImageView"
        android:layout_toLeftOf="@+id/chat_btn"
        android:layout_toStartOf="@+id/chat_btn" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_btn"
        android:background="@drawable/chatbtn"
        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp"
        android:layout_alignTop="@+id/more_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_above="@+id/more_btn"
        android:layout_alignLeft="@+id/more_btn"
        android:layout_alignStart="@+id/more_btn"
        android:paddingTop="50dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profileImageView"
        android:layout_toRightOf="@+id/more_btn"
        android:layout_toEndOf="@+id/more_btn"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:text="Points"
            android:textSize="18dp"
            android:paddingLeft="40dp"
            android:id="@+id/pointsText"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/flag"
            android:paddingRight="40dp"
            android:layout_toEndOf="@id/pointsText"
            android:layout_toRightOf="@id/pointsText"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberSports"
        android:textColor="#808080"
        android:text="Sports"
        android:textSize="18dp"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignLeft="@+id/more_btn"
        android:layout_alignStart="@+id/more_btn" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/ballImage"
            android:background="@drawable/ball"
            android:layout_toRightOf="@id/numberSports"/>
    </LinearLayout>
</LinearLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/profileImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
