<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/friend_photo"
        android:gravity="center"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/friend_name"
        android:text="Loading"
        android:textStyle="bold"
        android:singleLine="false"
        android:ellipsize="end"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#0e64a6"
        android:layout_toRightOf="@+id/friend_photo"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/friend_photo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastOnlineText"
        android:text="Last seen at "
        android:textSize="10dp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/friend_photo"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"

        android:layout_toEndOf="@+id/friend_photo"
        android:layout_below="@+id/friend_name"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/lastOnline"
        android:text="Loading"
        android:textSize="10dp"
        android:textColor="#0e64a6"
        android:textStyle="bold|italic"
        android:layout_toRightOf="@+id/lastOnlineText"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/friend_photo"
        android:layout_below="@+id/friend_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading"
        android:id="@+id/lastMessage"
        android:textSize="12dp"
        android:textColor="#545454"
        android:layout_toRightOf="@+id/friend_photo"
        android:textStyle="bold|italic"
        android:layout_below="@+id/lastOnlineText"
       android:layout_marginLeft="28dp"
        android:layout_marginTop="3dp"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"/>

    <!--Button
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:id="@+id/gotoChat"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:background="@drawable/chat"
        /-->
</RelativeLayout>