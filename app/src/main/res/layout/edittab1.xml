<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f9fc">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/editScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="72dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#f7f9fc"
            android:orientation="vertical">

            <TextView
                android:id="@+id/selectLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Select what sports you would like to follow" />

            <android.support.v7.widget.GridLayout
                android:id="@+id/editGridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/editFootball"
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:background="#ffffff"
                    android:button="@null"
                    android:drawableLeft="@drawable/ic_sport_football"
                    android:drawableRight="@drawable/ic_check"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="   Football"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_row="0"
                    app:layout_rowWeight="1" />

                <RadioButton
                    android:id="@+id/editBasketball"
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:background="#ffffff"
                    android:button="@null"
                    android:drawableLeft="@drawable/ic_sport_basketball"
                    android:drawableRight="@drawable/ic_check"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="   Basketball"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_row="0"
                    app:layout_rowWeight="1" />

                <RadioButton
                    android:id="@+id/editVolleyball"
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:background="#ffffff"
                    android:button="@null"
                    android:drawableLeft="@drawable/ic_sport_voleyball"
                    android:drawableRight="@drawable/ic_check"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="   Volleyball"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_row="1"
                    app:layout_rowWeight="1" />

                <RadioButton
                    android:id="@+id/editJogging"
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:background="#ffffff"
                    android:button="@null"
                    android:drawableLeft="@drawable/ic_sport_jogging"
                    android:drawableRight="@drawable/ic_check"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="   Jogging"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_row="1"
                    app:layout_rowWeight="1" />

                <RadioButton
                    android:id="@+id/editGym"
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:background="#ffffff"
                    android:button="@null"
                    android:drawableLeft="@drawable/ic_sport_gym"
                    android:drawableRight="@drawable/ic_check"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="   Gym"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_row="2"
                    app:layout_rowWeight="1" />

                <RadioButton
                    android:id="@+id/editCycling"
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:background="#ffffff"
                    android:button="@null"
                    android:drawableLeft="@drawable/ic_sport_cycling"
                    android:drawableRight="@drawable/ic_check"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="   Cycling"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_row="2"
                    app:layout_rowWeight="1" />

                <RadioButton
                    android:id="@+id/editTennis"
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:background="#ffffff"
                    android:button="@null"
                    android:drawableLeft="@drawable/ic_sport_tennis"
                    android:drawableRight="@drawable/ic_check"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="   Tennis"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_row="3"
                    app:layout_rowWeight="1" />

                <RadioButton
                    android:id="@+id/editPingPong"
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:background="#ffffff"
                    android:button="@null"
                    android:drawableLeft="@drawable/ic_sport_pingpong"
                    android:drawableRight="@drawable/ic_check"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="   Ping Pong"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_row="3"
                    app:layout_rowWeight="1" />

                <RadioButton
                    android:id="@+id/editSquash"
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:background="#ffffff"
                    android:button="@null"
                    android:drawableLeft="@drawable/ic_sport_squash"
                    android:drawableRight="@drawable/ic_check"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="   Squash"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_row="4"
                    app:layout_rowWeight="1" />

                <RadioButton
                    android:id="@+id/editOthers"
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:background="#ffffff"
                    android:button="@null"
                    android:drawableLeft="@drawable/ic_sport_others"
                    android:drawableRight="@drawable/ic_check"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="   Others"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_row="4"
                    app:layout_rowWeight="1" />
            </android.support.v7.widget.GridLayout>

            <TextView
                android:id="@+id/textViewEditRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editGridLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:text="Select the area range for activities around"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/editRangeBar"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_below="@+id/textViewEditRange"
                android:layout_marginTop="16dp"
                android:max="19" />

            <TextView
                android:id="@+id/editRangeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editRangeBar"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="20 Km"
                android:textColor="@color/pink" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@drawable/shadow_top_to_bottom" />

    <Button
        android:id="@+id/saveChangesButton2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:alpha="0"
        android:background="@drawable/pink_button_selector"
        android:text="SAVE CHANGES"
        android:textColor="#ffffff"
        android:textSize="14sp" />
</RelativeLayout>