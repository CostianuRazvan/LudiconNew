<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f9fc">
    <ImageView
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@drawable/shadow_top_to_bottom"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_above="@+id/messageInput">



    <include
        android:id="@+id/tool_bar"
        layout="@layout/header_login"
        android:layout_width="match_parent"
        android:layout_height="56dp" />
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refreshMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <ListView
        android:id="@+id/chatMessageListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:scrollbars="none"
        />
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
    <EditText
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:id="@+id/messageInput"
        android:hint="Write a message..."
        android:layout_alignParentBottom="true"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:id="@+id/sendButton"
        android:layout_alignParentBottom="true"
        android:text="SEND"
        android:layout_toRightOf="@+id/messageInput"/>

    <ProgressBar
        android:id="@+id/chatLoading"
        style="@android:style/Widget.Holo.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp" />

</RelativeLayout>