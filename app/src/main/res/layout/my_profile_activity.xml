<!--More specs-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/myProfileTop"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF">
        <TextView
            android:id="@+id/profileTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/darkblue"
            android:text="@string/my_profile"
            android:textSize="20sp"
            android:gravity="center|left"
            android:layout_marginLeft="16dp"
            android:layout_alignParentLeft="true"
            android:fontFamily="@string/fontbold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">
            <LinearLayout
                android:id="@+id/ludicoinsLayout"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/round_ludicoins"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_ludicoins"/>
                <TextView
                    android:id="@+id/profileLudicoins"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="\?"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:fontFamily="@string/fontmedium"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/yellow"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_edit_profile"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"/>
        </LinearLayout>
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/noConnectionTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myProfileTop">
        <include
            layout="@layout/no_connection_bar"/>
    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/profileContent"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        android:scrollbars="none"
        android:fillViewport="true"
        android:layout_below="@+id/noConnectionTop"
        android:alpha="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:clickable="false"
                    android:src="@drawable/com_facebook_profile_picture_blank_portrait" />

            </RelativeLayout>

            <TextView
                android:id="@+id/profileName"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:fontFamily="@string/fontmedium"
                android:textSize="18sp"
                android:textColor="@color/pink"
                android:text="Florin Bogdan"/>

            <ProgressBar
                android:id="@+id/profileLevelBar"
                android:layout_width="220dp"
                android:layout_height="8dp"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progress="250"
                android:max="1000"
                android:indeterminate="false"
                android:layout_marginTop="16dp"
                android:foreground="@color/pink"
                android:progressDrawable="@drawable/blueprogress"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/profileToNextLevel"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fontFamily="@string/fontmedium"
                    android:text="23.567"
                    android:textSize="14sp"
                    android:textColor="@color/blue"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_points_small"/>
                <TextView
                    android:id="@+id/profileToNextLevelText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/to_next_level"
                    android:textSize="14sp"
                    android:fontFamily="@string/fontmedium"
                    android:textColor="@color/lightGray"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="60dp"
                android:layout_width="match_parent"
                android:layout_marginTop="24dp"
                android:background="#ffffff"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_user_level"/>
                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/profileLevel"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="12"
                            android:fontFamily="@string/fontmedium"
                            android:textSize="16sp"
                            android:textColor="@color/green"/>
                        <TextView
                            android:id="@+id/profileLevelText"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="@string/level"
                            android:fontFamily="@string/fontmedium"
                            android:textSize="12sp"
                            android:textColor="@color/lightGray"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="1dp"
                    android:background="#400c3855"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_user_points"/>
                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/profilePoints"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="12.500"
                            android:fontFamily="@string/fontmedium"
                            android:textSize="16sp"
                            android:textColor="@color/blue"/>
                        <TextView
                            android:id="@+id/profilePointsText"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="@string/points"
                            android:fontFamily="@string/fontmedium"
                            android:textSize="12sp"
                            android:textColor="@color/lightGray"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="1dp"
                    android:background="#400c3855"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_user_position"/>
                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/profilePosition"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="46"
                            android:fontFamily="@string/fontmedium"
                            android:textSize="16sp"
                            android:textColor="@color/pink"/>
                        <TextView
                            android:id="@+id/profilePositionText"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="@string/position"
                            android:fontFamily="@string/fontmedium"
                            android:textSize="12sp"
                            android:textColor="#acb8c1"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:id="@+id/rateLayout">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/socialRating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@string/fontmedium"
                        android:text="@string/social_rating"
                        android:textColor="#0c3855"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/countSocialRate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@string/fontmedium"
                        android:text="Based on 23 reviews"
                        android:textColor="@color/lightGray"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/socialRate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@string/fontmedium"
                        android:text="4.23"
                        android:textColor="#d4498b"
                        android:textSize="16dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:id="@+id/reviewLayout">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/socialReviews">
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:id="@+id/buttonLayout">

                <Button
                    android:id="@+id/allReviews"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/pink_stroke_rounded_button"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/view_all_reviews"
                    android:textColor="#d4498b"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@string/fontmedium"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="24dp">
                <TextView
                    android:id="@+id/profilePracticeSportsLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/practiced_sports"
                    android:fontFamily="@string/fontbold"
                    android:textSize="14sp"
                    android:gravity="left"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/profilePracticeSportsCountLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2/12"
                    android:fontFamily="@string/fontmedium"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:textColor="@color/lightGray"/>
            </RelativeLayout>
            <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:scrollbars="none"
                android:fillViewport="true">
                <LinearLayout
                    android:id="@+id/profileSports"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/blueAlpha"
                android:layout_height="1dp"
                android:layout_marginTop="16dp">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/ProfileHistoryLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/fontbold"
                    android:gravity="left"
                    android:text="@string/last_activities"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/RVProfileHistory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/history">
                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/BtnShowFullHistory"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/pink_stroke_rounded_button"
                android:fontFamily="@string/fontmedium"
                android:text="@string/show_full_history"
                android:textColor="#d4498b"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/versusLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/statistics"
                android:fontFamily="@string/fontbold"
                android:textSize="14sp"
                android:gravity="left"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/profileTotalEventsLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_activities"
                                android:textColor="@color/lightGray"/>
                            <TextView
                                android:id="@+id/profileTotalPointsLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_points"
                                android:textColor="@color/lightGray"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/profileTotalEvents"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="456"
                                android:textColor="@color/pink"/>
                            <TextView
                                android:id="@+id/profileTotalPoints"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12.500"
                                android:textColor="@color/blue"/>
                        </LinearLayout>
                    </LinearLayout>
                    <Spinner
                        android:id="@+id/allSports"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:alpha="0"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/lightGray"/>
                <include
                    layout="@layout/my_profile_graph"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:paddingBottom="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentBottom="true">
                <Button
                    android:id="@+id/profileLogout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/logout"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:background="@drawable/pink_button_selector"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/profileProgressBar"
        style="@android:style/Widget.Holo.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:indeterminate="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@drawable/shadow_top_to_bottom"
        android:layout_below="@+id/myProfileTop"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@drawable/shadow_bottom_to_top"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>